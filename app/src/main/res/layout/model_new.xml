<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp"
        android:weightSum="1"
        android:background="@drawable/newbuttonview">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:text="Large fdgszdfgsfgdgkjhakggagdssfsdfsfsdfsdfsdfsdfs"
                android:id="@+id/txtname"
                android:gravity="left|center"
                android:typeface="normal"
                tools:text="Subject Name"
                android:textColor="@android:color/holo_red_dark"
                android:paddingLeft="10dp"
                android:minHeight="26dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <ImageView
                android:layout_height="0dp"
                app:srcCompat="@drawable/video"
                android:layout_width="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/txtgoals"

                android:layout_height="wrap_content"
                tools:text="Total :20\nPresent:10\nAbsent:7\nCancelled:3"
                android:padding="5dp"
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>